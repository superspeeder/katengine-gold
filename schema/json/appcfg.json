{
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "window": {
            "type": "object",
            "properties": {
                "width": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "exlusiveMinimum": 0        
                        },
                        {
                            "const": "monitor-width"
                        }
                    ]
                },
                "height": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "exlusiveMinimum": 0        
                        },
                        {
                            "const": "monitor-height"
                        }
                    ]
                },
                "fixed_size": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                },
                "fullscreen": {
                    "type": "boolean"
                },
                "monitor": {
                    "type": "integer",
                    "minimum": 0
                },
                "floating": {
                    "type": "boolean"
                },
                "maximized": {
                    "type": "boolean"
                },
                "stereoscopic": {
                    "type": "boolean"
                },
                "windowTransparency": {
                    "type": "boolean"
                },
                "aspectRatio": {
                    "type": "string",
                    "pattern": "^[0-9]+\\:[0-9]+$"
                }
            },
            "required": ["title"],
            "dependentRequired": {
                "width": ["height"],
                "height": ["width"]
            },
            "if": {
                "required": ["fullscreen"]
            },
            "then": {
            },
            "else": {
                "required": ["width", "height"]
            }
        }
    }
}